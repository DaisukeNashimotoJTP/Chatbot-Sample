# =================================
# Production Environment Variables
# =================================

# Database Configuration
POSTGRES_DB=chat_db
POSTGRES_USER=chat_user
POSTGRES_PASSWORD=your-secure-password-here

# JWT Configuration
SECRET_KEY=your-very-secure-secret-key-for-production-at-least-32-characters

# CORS Configuration
CORS_ORIGINS=["https://yourdomain.com","https://www.yourdomain.com"]

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@yourdomain.com

# AWS Configuration
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=ap-northeast-1
S3_BUCKET_NAME=your-bucket-name
CLOUDFRONT_DOMAIN=your-cloudfront-domain

# Logging Configuration
LOG_LEVEL=INFO

# Frontend Configuration
NEXT_PUBLIC_API_URL=https://api.yourdomain.com/v1
NEXT_PUBLIC_WS_URL=wss://api.yourdomain.com/v1/ws
NEXTAUTH_URL=https://yourdomain.com
NEXTAUTH_SECRET=your-nextauth-secret-for-production

# Feature Flags
NEXT_PUBLIC_ENABLE_FILE_UPLOAD=true
NEXT_PUBLIC_ENABLE_VOICE_MESSAGES=false
NEXT_PUBLIC_ENABLE_VIDEO_CALLS=false

# Analytics
NEXT_PUBLIC_GA_TRACKING_ID=your-ga-tracking-id
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn
